    }                                            

    private void jButton_XoaActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        String tenSach = jTextField_Tensach.getText();
        int check;
        int kiemTraSach = 0;
        if (tenSach.equals("")) {
            kiemTraSach = 1;
            JOptionPane.showConfirmDialog(this, "Hay nhap ten sach ban muon xoa");
        } else if (kiemTraSach != 1) {
            check = kiemTraSach(tenSach);
            if (check == 1) {
                int ret = JOptionPane.showConfirmDialog(this, "Ban co chac ban muon xoa?", "Xac nhan", 0);
                if (ret == JOptionPane.CANCEL_OPTION) {
                    return;
                } else {
                    if (ret == JOptionPane.OK_OPTION) {
                        xoaSach(tenSach);
                        JOptionPane.showConfirmDialog(this, "Xoa sach thanh cong");
                    }

                }
            } else {
                JOptionPane.showConfirmDialog(this, "Sach nay chua co, hay them thong tin sach vao he thong");
            }

        }

    }                                           

     private void chinhSua(String tensach, String loaisach, String hinh, int soluong, String ngayXB, String kichthuoc, String sotrang, String gia, String sku, String mota, String tentg) {
        Connection ketNoi = KetNoiMSSQL.layKetNoi();
        String sql = "update SACH set ";
        if (!tensach.equals("")) {
            sql += "TENSACH=N'" + tensach + "'";
        }
        if (!loaisach.equals("")) {
            sql += ",LOAISACH = N'" + loaisach + "'";
        }
        if (!hinh.equals("")) {
            sql += ",HINH = N'" + hinh + "'";
        }
        if (!String.valueOf(soluong).equals("")) {
            sql += ",SOLUONG = " + soluong;
        }
        if (!ngayXB.equals("")) {
            sql += ",NGAYXB = N'" + ngayXB + "'";
        }
        if (!sotrang.equals("")) {
            sql += ",SOTRANG =N'" + sotrang + "'";
        }
        if (!sku.equals("")) {
            sql += ",SKU = N'" + sku + "'";
        }
        if (!gia.equals("")) {
            sql += ",GIA= N'" + gia + "'";
        }
        if (!mota.equals("")) {
            sql += ",MOTA = N'" + mota + "'";
        }
        if (!tentg.equals("")) {
            sql += ",TENTG = N'" + tentg + "'";
        }
        sql += "where TENSACH = N'"+tensach+"'";
        System.out.println(sql);
        try {
            PreparedStatement ps = ketNoi.prepareStatement(sql);
            ps.executeUpdate();
            System.out.println("Chinh sua thanh cong!");

        } catch (SQLException ex) {
            JOptionPane.showConfirmDialog(this, "Sach chưa có trong hệ thống");
            Logger.getLogger(FrameForm.class.getName()).log(Level.SEVERE, null, ex);
        }

    }
     
    private void jButton_SuaActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        String tensach = jTextField_Tensach.getText();
        String loaisach = jTextField_Looaisach.getText();
        String hinh = jTextField_Hinhanh.getText();
        String ngayXB = jTextField_NXB.getText();
        int soluong = Integer.parseInt(jTextField_Soluong.getText());
        String kichthuoc = jTextField_kichthuoc.getText();
        String gia = jTextField_Giasach.getText();
        String sotrang = jTextField_Sotrang.getText();
        String sku = jTextField_Giasach.getText();
        String mota = jTextField_Mota.getText();
        String tentg = String.valueOf(cb_Tentacgia.getSelectedItem());
        System.out.println(kiemTraSach(tensach));
        if (kiemTraSach(tensach) == 1)
            chinhSua(tensach, loaisach, hinh, soluong, ngayXB, kichthuoc, sotrang, gia, sku, mota, tentg);
    }                                           

    private void jButton_HienthiActionPerformed(java.awt.event.ActionEvent evt) {                                                
        String tenSach = jTextField_Tensach.getText();
        
        if (kiemTraSach(tenSach) == 1){ 
            hienThi(tenSach);
    }
        else
            JOptionPane.showConfirmDialog(this, "Sach khong ton tai!");

    }                                               
    
    private void kiemTraTG(){
        String tg = cb_Tentacgia.getSelectedItem().toString();
        boolean kt = true;
        for (int i=0;i<cb_Tentacgia.getItemCount();i++)
            if (tg.equals(cb_Tentacgia.getItemAt(i)))
                  kt = true;
             else{
                kt = false;
                break;
            }
        if (kt==false)
        {
            Connection ketNoi = KetNoiMSSQL.layKetNoi();
            String sql = "insert into TACGIA values(?)";
            try {
                
                PreparedStatement ps = ketNoi.prepareStatement(sql);
                ps.setString(1, tg);
                ps.executeUpdate();
            } catch (SQLException ex) {
                Logger.getLogger(FrameForm.class.getName()).log(Level.SEVERE, null, ex);
            } 
        }
    }
    
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String s = cb_Tentacgia.getSelectedItem().toString();
        kiemTraTG();
    }                                        

   

