    private void luuSach(String tensach, String loaisach, String hinh, int soluong, String ngayXB, String kichthuoc, String sotrang, String gia, String sku, String mota, String tentg) {
        Connection ketNoi = KetNoiMSSQL.layKetNoi();
        String sql = "INSERT into SACH values(?,?,?,?,?,?,?,?,?,?,?)";
        try {

            PreparedStatement ps = ketNoi.prepareStatement(sql);
            ps.setString(1, tensach);
            ps.setString(2, loaisach);
            ps.setString(3, hinh);
            ps.setInt(4, soluong);
            ps.setString(5, ngayXB);
            ps.setString(6, kichthuoc);
            ps.setString(7, sotrang);
            ps.setString(8, sku);
            ps.setString(9, gia);
            ps.setString(10, mota);
            ps.setString(11, tentg);
            ps.executeUpdate();
        } catch (SQLException ex) {
            Logger.getLogger(FrameForm.class.getName()).log(Level.SEVERE, null, ex);
        }

    }

    private void loadCompobox() {
        Connection ketNoi = KetNoiMSSQL.layKetNoi();
        String sql = "select * from TACGIA";
        try {
            PreparedStatement ps = ketNoi.prepareStatement(sql);
            ResultSet rs = ps.executeQuery();
            while (rs.next()) {
                cb_Tentacgia.addItem(rs.getString("TENTG"));

            }
            System.out.println("LOAD COMBOBOX THÀNH CÔNG!");

        } catch (SQLException ex) {
            Logger.getLogger(FrameForm.class.getName()).log(Level.SEVERE, null, ex);
        }

    }

    private int kiemTraSach(String tenSach) {
        java.sql.Connection ketNoi = KetNoiMSSQL.layKetNoi();
        int tonTai = 0;
        String sql = "select * from SACH where TENSACH = N'" + tenSach + "'";
        try {
            PreparedStatement ps = ketNoi.prepareStatement(sql);
            ResultSet rs = ps.executeQuery();
            if (rs.next()) {
                tonTai = 1;
            }
            rs.close();
            ps.close();
            ketNoi.close();
        } catch (SQLException e) {
            Logger.getLogger(TH.class.getName()).log(Level.SEVERE, null, e);
        }
        return tonTai;
    }

    private void xoaSach(String tenSach) {
        Connection ketNoi = KetNoiMSSQL.layKetNoi();
        String sql = "DELETE from SACH where TENSACH = ?";
        try {
            PreparedStatement ps = ketNoi.prepareStatement(sql);
            ps.setString(1, tenSach);
            ps.executeUpdate();
        } catch (SQLException e) {
            Logger.getLogger(TH.class.getName()).log(Level.SEVERE, null, e);
        }
    }

    public void hienThi(String tenSach) {
        Connection ketNoi = KetNoiMSSQL.layKetNoi();
        String sql = "select * from SACH where TENSACH = N'" + tenSach + "'";
        String tensach, hinh, ngayXB, kichthuoc, sotrang, gia, sku, mota, tentg;

        try {
            PreparedStatement ps = ketNoi.prepareStatement(sql);
            ResultSet rs = ps.executeQuery();
            if (rs.next()) {
                tensach = rs.getString("TENSACH");
                hinh = rs.getString("HINH");
                ngayXB = rs.getString("NGAYXB");
                kichthuoc = rs.getString("KICHTHUOC");
                sotrang = String.valueOf(rs.getInt("SOTRANG"));
                gia = rs.getString("GIA");
                sku = rs.getString("SKU");
                mota = rs.getString("MOTA");
                tentg = rs.getString("TENTG");
                TH th;
                try {
                    th = new TH();
                    th.setThongTin(tensach, hinh, ngayXB, kichthuoc, sotrang, gia, sku, mota, tentg);
                    th.setVisible(true);
                } catch (IOException ex) {
                    Logger.getLogger(FrameForm.class.getName()).log(Level.SEVERE, null, ex);
                }
            }

            rs.close();
            ps.close();
            ketNoi.close();

        } catch (SQLException ex) {
            Logger.getLogger(FrameForm.class.getName()).log(Level.SEVERE, null, ex);
        }

    }
    
